<%= form_for @answer do |q| %>
  <%= q.label :question_id %>
  <br />
  <%= q.select :question_id, options_for_answer_question %>
  <br />
  <%= q.label :party_id %>
  <br />
  <%= q.select :party_id, options_for_answer_party %>
  <br />
  <%= q.label :answer %>
  <br />
  <%= q.select :answer, options_for_answer_answer %>
  <br />
  <%= q.label :reasoning %>
  <br />
  <%= q.text_area :reasoning %>
  <br />
  <%= q.submit %>
<% end %>
